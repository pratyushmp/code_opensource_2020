// c++ code to reverse a string
      
#include<iostream>             
#include<string.h>      
             
using namespace std;
        
int main ()
{
    char a[50], temp;
    int i, j;
    cout << "Enter string : ";      
    gets(a);      
    j = strlen(a) - 1;
    for (i = 0; i < j; i++,j--)
    {
        temp = a[i];
        a[i] = a[j];
        a[j] = temp;
    }
    cout << "\nReverse string : " << a;
    return 0;
}
      
      
        


      



  

  


    


  

  
    
    
  



  















  

  

  


        

  
    
